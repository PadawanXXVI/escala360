# -----------------------------
# üîß Configura√ß√µes Flask
# -----------------------------
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=sua_chave_segura_aqui
FLASK_RUN_PORT=5050   # Porta alternativa recomendada (evita conflito com outros apps Flask)

# -----------------------------
# üóÑÔ∏è Configura√ß√µes PostgreSQL
# -----------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=escala360
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456

# -----------------------------
# ‚öôÔ∏è SQLAlchemy
# -----------------------------
SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False
